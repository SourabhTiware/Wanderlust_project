<% layout("/layouts/boilerplate") %>

<br>


<div class="row mt-3">

        <div class="col-8 offset-2">

            <h3>Create New Listing</h3>

    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy Title" class="form-control" required>

            <div class="valid-feedback"> 
                Title Looks good!
            </div>
            <div class="invalid-feedback"> 
                Title is missing 
            </div>
        </div>
        
        <div  class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" id="descrip" required></textarea>
            <div class="invalid-feedback">Please enter a short Description.</div>
        </div>
        
        <!-- <div  class="md-3">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image][url]" placeholder="Enter image URL/Link" class="form-control" >
        </div> -->

        
        <div  class="md-3">
            <div class="about-image">

                <div class="newImg">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image][url]"  class="form-control" required >
                </div>

                    <div class="dropdown" required>
                            <label for="listing-type">Choose a listing type</label>

                           <select name="listing[category]" id="list-type">
                                <option>Select</option>
                                <option value="trending">Trending</option>
                                <option value="rooms">Rooms</option>
                                <option value="iconic-cities">Iconic Cities</option>
                                <option value="mountains">mountains</option>
                                <option value="castles">Castles</option>
                                <option value="camping">Camping</option>
                                <option value="farms">Farms</option>
                                <option value="arctic">Arctic</option>
                                <option value="domes">Domes</option>
                                <option value="boat">Boat</option>
                                
                            </select>
                    </div>
            </div>

        </div>

        <div class="row">
            <div  class="md-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" placeholder="1200" class="form-control" required>

                <div class="invalid-feedback">Please enter valid price.</div>
            </div >
    
            <div  class="md-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                <div class="invalid-feedback">Please enter country name.</div>
            </div>
        </div>
       

        <div  class="md-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Kolhapur-Maharashtra" class="form-control" required>
            <div class="invalid-feedback">Please enter location.</div>
        </div>

        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br>
        <br>
    </form>
    </div>
</div>
